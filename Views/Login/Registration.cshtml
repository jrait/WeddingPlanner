@model User
<div class = "text-center">
<h1>Registration</h1>

<form asp-action = "CreateUser" asp-controller = "Login">

    <label asp-for="FirstName"></label>
    <input asp-for ="FirstName">
    <span class = "text-danger" asp-validation-for = "FirstName"></span>
    <label asp-for="LastName"></label>
    <input asp-for ="LastName">
    <span class = "text-danger"asp-validation-for = "LastName"></span>
    <label asp-for="Email"></label>
    <input asp-for ="Email">
    <span class = "text-danger" asp-validation-for = "Email"></span>
    <label asp-for="Password"></label>
    <input asp-for ="Password">
    <span class = "text-danger" asp-validation-for = "Password"></span>
    <label asp-for="Confirm"></label>
    <input asp-for ="Confirm">
    <span class = "text-danger" asp-validation-for = "Confirm"></span>
    <input type = 'submit' value = "Register" class = "btn btn-primary m-3">
</form>
<a href = "/register">Already have an account?  Click to Login!</a>
</div>